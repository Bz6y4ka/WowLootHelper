        { 
            panel2.Controls.Clear();
            panel2.Controls.Add(HomeControl);
        }

        private void lootControl1_Load(object sender, EventArgs e)
        {

        }

        private void homeControl1_Load(object sender, EventArgs e)
        {

        }

        private void button2_Click(object sender, EventArgs e)
        {
            panel2.Controls.Clear();
            panel2.Controls.Add(LootControl);
        }

        private void button3_Click(object sender, EventArgs e)
        {
            panel2.Controls.Clear();
            panel2.Controls.Add(RouteControl);
        }

        private void panel1_Paint(object sender, PaintEventArgs e)
        {

        }

