using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Reflection;
using System.IO;
using Newtonsoft.Json;

namespace KypcachSecondVersion
{
    public partial class Form1 : Form
    {
        private List<Instance> Instances = new List<Instance>();
        private LootControl LootControl;
        private RouteControl RouteControl;
        private HomeControl HomeControl;
        private Boolean isLootControlActive = false;
        public Form1() //конструктор, инициализируем компоненты, читаем json из файла, 
        {
            InitializeComponent();
            var assembly = Assembly.GetExecutingAssembly(); // 26-37 - читаем json, GetExecutingAssembly - чтобы доставать ресурсы. Assembly - класс, чтобы доставать ресурсы
            var resourceName = "KypcachSecondVersion.Resources.LootList.json";
            button1.FlatAppearance.BorderSize = 1; //BorderSize - границы кнопки
            button1.FlatStyle = FlatStyle.Flat; //
            String jsonString;
            KeyPreview = true;

            using (Stream stream = assembly.GetManifestResourceStream(resourceName)) /*Stream - можно прочесть либо все байты из файла, либо вычитать стримом, 
                стрим позвал€ет читать из файла потоком(прочесть про Stream)*/ //GetManifestResourceStream - фигн€ в шарпах, чтобы доставать ресурсы(файл.json)

            using (StreamReader reader = new StreamReader(stream)) //StreamReader - класс, который реализует процесс чтени€€ из файла. reader - им€ переменной.
            {
                jsonString = reader.ReadToEnd();
            }

            Instances = JsonConvert.DeserializeObject<List<Instance>>(jsonString); // чтение инстов. DeserializeObject - преобразование строку в объект(<ListInstance>).

            LootControl = new LootControl(Instances); //создали 3 формы(контрола) и добавили их на главную форму, чтобы между ними переключатьс€ (почитать про разницу контролов и форм)
            RouteControl = new RouteControl(Instances);
            HomeControl = new HomeControl(Instances);
            RouteControl.Anchor = (AnchorStyles.Bottom | AnchorStyles.Left | AnchorStyles.Top | AnchorStyles.Right); //если расшир€етс€ экран, то контрол тоже расшир€етс€.

            panel2.Controls.Add(HomeControl);
        }
        private void vScrollBar1_Scroll(object sender, ScrollEventArgs e)
        {
            // Create and initialize a VScrollBar.
            VScrollBar vScrollBar1 = new VScrollBar();

            // Dock the scroll bar to the right side of the form.
            vScrollBar1.Dock = DockStyle.Right;

            // Add the scroll bar to the form.
            Controls.Add(vScrollBar1);
        }

